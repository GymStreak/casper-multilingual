<div class="language-selector">
    <button class="language-button" id="language-modal-trigger">
        {{#if @site.locale}}
            {{#match @site.locale "en"}} 🇬🇧 
            {{else match @site.locale "es"}} 🇪🇸 
           <!--  {{else match @site.locale "ta"}} 🇮🇳 -->
            {{else match @site.locale "pt"}} 🇵🇹 
            {{else match @site.locale "nl"}} 🇳🇱 
           <!-- {{else match @site.locale "ar"}} 🇸🇦 -->
            {{else match @site.locale "de"}} 🇩🇪 
           <!-- {{else match @site.locale "el"}} 🇬🇷 -->
            {{else match @site.locale "fr"}} 🇫🇷 
            {{else match @site.locale "hi"}} 🇮🇳 
            {{else match @site.locale "ja"}} 🇯🇵 
          <!--  {{else match @site.locale "ms"}} 🇲🇾 -->
            {{else match @site.locale "ru"}} 🇷🇺 
            <!-- {{else match @site.locale "zh"}} 🇨🇳 -->
        {{/match}}
        {{/if}}
    </button>

    <div class="language-modal" id="language-modal">
        <div class="modal-content">
            <span class="close-button" id="close-modal">&times;</span>
            <h2>{{t "Select Language"}}</h2>
            <ul>
                <li><a href="https://gymstreak.com">🇬🇧 English</a></li>
                <li><a href="https://nl.gymstreak.com">🇳🇱 Nederlands</a></li>
                <li><a href="https://pt.gymstreak.com">🇧🇷 Português</a></li>
                <li><a href="https://es.gymstreak.com">🇪🇸 Español</a></li>
              <!--  <li><a href="https://ar.gymstreak.com">🇸🇦 العربية</a></li> -->
                <li><a href="https://de.gymstreak.com">🇩🇪 Deutsch</a></li>
                <li><a href="https://fr.gymstreak.com">🇫🇷 Français</a></li>
                <li><a href="https://hi.gymstreak.com">🇮🇳 हिन्दी</a></li>
                <li><a href="https://jp.gymstreak.com">🇯🇵 日本語</a></li>
                <li><a href="https://ru.gymstreak.com">🇷🇺 Русский</a></li>
               <!-- <li><a href="https://zh.gymstreak.com">🇨🇳 中文</a></li> -->
            </ul>
        </div>
    </div>
</div>

